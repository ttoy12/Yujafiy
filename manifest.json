{
    "manifest_version": 3,
    "name": "Yujafiy",
    "version": "1.0",
    "permissions": [
      "http://localhost:5000/*",
      "http://client.cors-api.appspot.com",
      "https://api.topmediai.com/v1/text2speech",
      "clipboardRead"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
        "512": "voice.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["*"],
            "matches": ["https://files.topmediai.com/*"]
        }
    ]
}
  